<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <title>Animes</title>
</head>
<body>
  <br>
  <div class="container-fluid form-group">
    <a href="/animes/new" type="button" class="btn btn-success">Agregar Nuevo</a>
  </div>
  <br>
  

  <div class="container">
    <form action="/" method="GET">
      <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Buscar por Anime ID" name="q" value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
      </div>
    </form>
  </div>



<div class="container-fluid">
  <table class="table table-hover table-bordered border-primary">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Anime ID</th>
        <th>Nombre</th>
        <th>Género</th>
        <th>Tipo</th>
        <th>Episodios</th>
        <th>Rating</th>
        <th>Members</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% animes.forEach(anime => { %>
        <tr>
          <td><%= anime._id %></td>
          <td><%= anime.anime_id %></td>
          <td><%= anime.name %></td>
          <td><%= anime.genre %></td>
          <td><%= anime.type %></td>
          <td><%= anime.episodes %></td>
          <td><%= anime.rating %></td>
          <td><%= anime.members %></td>
          <td>
            <form action="/animes/<%= anime._id %>">
              <button type="submit" type="button" class="btn btn-warning">Editar</button>
            </form>
            <a href="/animes/<%= anime._id %>" type="button" class="btn btn-warning" >
              <img src="../img/editar.png" >
            </a>
            <form action="/animes/<%= anime._id %>/delete" method="POST">
              <button type="submit" type="button" class="btn btn-danger" >Eliminar</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <div class="text-center">
    <% if (parseInt(page) > 1) { %>
      <a href="/?page=<%= parseInt(page) - 1 %>" type="button" class="btn btn-primary">Anterior</a>
    <% } %>

    <% if (parseInt(count) > (parseInt(page) * 5)) { %>
      <a href="/?page=<%= parseInt(page) + 1 %>" type="button" class="btn btn-primary">Siguiente</a>
    <% } %>
    <a href="/data" type="button" class="btn btn-primary">Mostrar Datos</a>
  </div>
  <br>
</div>
  
  <div class="text-center">
    <% if (parseInt(page) > 1) { %>
      <a href="/?page=<%= parseInt(page) - 1 %>" type="button" class="btn btn-primary">Anterior</a>
    <% } %>

    <% if (parseInt(count) > (parseInt(page) * 5)) { %>
      <a href="/?page=<%= parseInt(page) + 1 %>" type="button" class="btn btn-primary">Siguiente</a>
    <% } %>
  </div>

</body>
</html>
